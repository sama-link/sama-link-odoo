<odoo>
    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">project.task.form.inherit.sl_project</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="user_ids" position="attributes">
                <attribute name="domain">['|', ('company_id', 'not in', company_ids), ('company_id', '=', company_id), ('share', '=', False), ('active', '=', True)]</attribute>
            </field>
            <field name="tag_ids" position="after">
                <field name="company_ids" widget="many2many_tags" options="{'no_create': True}"/>
            </field>
        </field>
    </record>

    <record id="quick_create_task_form" model="ir.ui.view">
        <field name="name">project.task.quick.create.form.inherit.sl_project</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.quick_create_task_form"/>
        <field name="arch" type="xml">
            <field name="user_ids" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id), ('share', '=', False), ('active', '=', True)]</attribute>
            </field>
        </field>
    </record>
</odoo>