<odoo>
    <record id="view_hr_transfer_form" model="ir.ui.view">
        <field name="name">hr.transfer.form</field>
        <field name="model">hr.transfer</field>
        <field name="arch" type="xml">
            <form string="HR Transfer">
                <header>
                    <!-- <button name="action_confirm" string="Confirm" type="object" invisible="state != 'draft'" -->
                             <!-- class="btn-primary"/> -->
                    <button name="action_done" string="Transfer" type="object" invisible="state != 'draft' or not id"
                             class="btn-primary" groups="hr_work_location_transfer.group_hr_transfer_manager"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'draft' or not id"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft"/>
                </header>
                <sheet>
                    <group>
                        <group string="Employee Information">
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="current_location_id"/>
                        </group>
                        <group string="Transfer Details">
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="new_location_id" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <group>
                        <group string="Management Information">
                            <field name="current_parent_id"/>
                            <field name="current_leave_manager_id"/>
                            <field name="current_attendance_manager_id"/>
                        </group>
                        <group string="New Management Information">
                            <field name="new_parent_id" readonly="state != 'draft'"/>
                            <field name="new_leave_manager_id" readonly="state != 'draft'"/>
                            <field name="new_attendance_manager_id" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Reason for Transfer">
                            <field name="reason" readonly="state != 'draft'"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hr_transfer_list" model="ir.ui.view">
        <field name="name">hr.transfer.list</field>
        <field name="model">hr.transfer</field>
        <field name="arch" type="xml">
            <list string="HR Transfers">
                <field name="employee_id"/>
                <field name="current_location_id"/>
                <field name="new_location_id"/>
                <field name="date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_hr_transfer_search" model="ir.ui.view">
        <field name="name">hr.transfer.search</field>
        <field name="model">hr.transfer</field>
        <field name="arch" type="xml">
            <search string="HR Transfers">
                <field name="employee_id"/>
                <field name="current_location_id" string="Work Location (current)"/>
                <field name="new_location_id" string="Work Location (new)"/>
                <filter string="Draft" name="filter_draft" domain="[('state','=','draft')]"/>
                <filter string="Transferred" name="filter_done" domain="[('state','=','done')]"/>
                <filter string="Cancelled" name="filter_cancel" domain="[('state','=','cancel')]"/>
                <filter name="group_work_location" string="Work Location (current)" domain="[]" context="{'group_by': 'current_location_id'}"/>
                <filter name="group_new_work_location" string="Work Location (new)" domain="[]" context="{'group_by': 'new_location_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_hr_transfer" model="ir.actions.act_window">
        <field name="name">HR Transfers</field>
        <field name="res_model">hr.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hr_transfer" name="Transfers" parent="hr.menu_hr_root" action="action_hr_transfer" sequence="10"/>
</odoo>