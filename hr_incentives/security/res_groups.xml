<odoo>
    <data noupdate="1">
        <record model="ir.module.category"
                id="module_category_hr_incentives">
            <field name="name">Incentives</field>
            <field name="description">Helps you manage HR incentives.</field>
            <field name="sequence">17</field>
        </record>
        <record id="group_hr_incentives_officer" model="res.groups">
            <field name="name">HR Incentives Officer</field>
            <field name="category_id" ref="module_category_hr_incentives"/>
            <field name="implied_ids"
                   eval="[(4, ref('hr_contract.group_hr_contract_employee_manager'))]"/>
            <field name="whitelisted_menu_ids" eval="[(4, ref('hr_incentives.menu_hr_incentives_root'))]"/>
            <field name="menu_access" eval="[
                (4, ref('menu_hr_incentives_root')),
            ]" />
            
        </record>
        <record id="group_hr_incentives_manager" model="res.groups">
            <field name="name">HR Incentives Manager</field>
            <field name="category_id" ref="module_category_hr_incentives"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_hr_incentives_officer'))]"/>
            <field name="users"
                   eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>