<odoo>
    <record id="hr_incentive_comp_rule" model="ir.rule">
        <field name="name">Incentive multi-company</field>
        <field name="model_id" ref="model_hr_incentive"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'parent_of', company_ids)]</field>
    </record>

    <record id="hr_incentive_officer_rule_team" model="ir.rule">
        <field name="name">hr.incentive (Team Only)</field>
        <field name="model_id" ref="model_hr_incentive"/>
        <field name="domain_force">[('employee_id.parent_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_incentives.group_hr_incentives_officer'))]"/>
    </record>

    <record id="hr_incentive_manager_rule_clear" model="ir.rule">
        <field name="name">hr.incentive (Clear)</field>
        <field name="model_id" ref="model_hr_incentive"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr_incentives.group_hr_incentives_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

