<odoo>
    <record id="view_groups_form" model="ir.ui.view">
        <field name="name">res.groups.form</field>
        <field name="model">res.groups</field>
        <field name="inherit_id" ref="base.view_groups_form"/>
        <field name="arch" type="xml">
            <page name="menus" position="after">
                <page name="whitelisted_menus" string="Whitelisted Menus">
                    <div class="oe_grey" colspan="2">
                        <div class="text-muted">
                            *If 'Ancestors', chosen menus and their parent menus are included.
                        </div>
                        <div class="text-muted">
                            *If 'Descendants', chosen menus and their child menus are included.
                        </div>
                    </div>
                    <field name="traversal_as" widget="radio" options="{'horizontal': true}"/>
                    <field name="whitelisted_menu_ids" invisible="traversal_as != 'ancestors'" domain="[('action', '!=', False)]"/>
                    <field name="whitelisted_menu_ids" invisible="traversal_as != 'descendants'" domain="[('parent', '=', False)]"/>
                </page>
            </page>
        </field>
    </record>
</odoo>