<odoo>
    <record id="hr_my_payslip_action" model="ir.actions.act_window">
        <field name="name">My Payslips</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="hr_payroll_community.hr_payslip_search"/>
        <field name="domain">[('employee_id.user_id', '=', uid),('state', '=', 'done')]</field>
    </record>

    <menuitem id="menu_my_payslips"
              name="My Payslips"
              action="hr_my_payslip_action"
    />
</odoo>