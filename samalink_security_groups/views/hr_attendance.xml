<odoo>
    <record id="hr_attendance_view_filter" model="ir.ui.view">
        <field name="name">hr_attendance_view_filter</field>
        <field name="model">hr.attendance</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0" string="Group By">
                    <filter string="Date" name="groupby_name" context="{'group_by': 'check_in:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hr_my_attendance_action" model="ir.actions.act_window">
        <field name="name">My Attendances</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">list</field>
        <field name="context">
            {
                "search_default_groupby_name": 1,
                "create": false,
                "edit": false,
                "delete": false,
            }
        </field>
        <field name="search_view_id" ref="hr_attendance_view_filter"/>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
    </record>

    <menuitem id="menu_my_attendances"
              name="My Attendances"
              action="hr_my_attendance_action"
    />

    <menuitem id="menu_team_attendances"
              name="Team Attendances"
              action="hr_attendance.hr_attendance_management_action"
    />

    <menuitem id="menu_all_attendances"
              name="All Attendances"
              action="hr_attendance.hr_attendance_action"
    />
</odoo>