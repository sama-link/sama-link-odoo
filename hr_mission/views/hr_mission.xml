<odoo>
    <record id="view_hr_mission_form" model="ir.ui.view">
        <field name="name">hr.mission.form</field>
        <field name="model">hr.mission</field>
        <field name="arch" type="xml">
            <form string="HR Mission">
                <header>
                    <!-- HR Approval -->
                    <button name="action_hr_approve" string="Approve" type="object" invisible="state != 'confirmed'" class="btn-primary" groups="hr_mission.group_hr_mission_manager"/>
                    <button name="action_reject" string="Reject" type="object" invisible="state != 'confirmed'" class="btn-secondary" groups="hr_mission.group_hr_mission_manager"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state != 'hr_approved'" groups="hr_mission.group_hr_mission_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="confirmed,hr_approved"/>
                </header>
                <sheet>
                    <group>
                        <group string="Employee Information">
                            <field name="employee_id" invisible="1" force_save="1"/>
                            <field name="employee_id" groups="hr_mission.group_hr_mission_officer" readonly="state != 'confirmed'"/>
                            <field name="department_id" options="{'no_open': True}"/>
                            <field name="current_location_id" options="{'no_open': True}"/>
                            <field name="manager_id" options="{'no_open': True}"/>
                        </group>
                        <group string="Mission Details">
                            <field name="mission_type" readonly="state != 'confirmed'"/>
                            <field name="end_date" invisible="1"/>
                            <field name="start_date"
                                   string="Mission Period"
                                   widget="daterange"
                                   options="{'end_date_field': 'end_date'}"
                                   readonly="state != 'confirmed'"
                                   />
                            <field name="destination" readonly="state != 'confirmed'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <group>
                                <field name="note" readonly="state != 'confirmed'"/>
                                <field name="hr_reason" groups="hr_mission.group_hr_mission_manager" readonly="state != 'confirmed'"/>
                            </group>
                        </page>
                        <page string="Attendance Records" groups="hr_mission.group_hr_mission_manager">
                            <field name="attendance_ids">
                                <list string="Attendance Records">
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hr_mission_list" model="ir.ui.view">
        <field name="name">hr.mission.list</field>
        <field name="model">hr.mission</field>
        <field name="arch" type="xml">
            <list string="HR Missions">
                <field name="employee_id"/>
                <field name="current_location_id"/>
                <field name="mission_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="destination"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_hr_mission_search" model="ir.ui.view">
        <field name="name">hr.mission.search</field>
        <field name="model">hr.mission</field>
        <field name="arch" type="xml">
            <search string="Search HR Missions">
                <field name="employee_id"/>
                <field name="current_location_id" string="Work Location" />
                <field name="destination"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('state','=','confirmed')]" />
                <filter name="filter_hr_approved" string="HR Approved" domain="[('state','=','hr_approved')]" />
                <filter name="filter_hr_pending" string="Waiting for Approval" groups="hr_mission.group_hr_mission_manager" domain="[('state','=','confirmed')]" />
                <filter name="group_work_location" string="Work Location" domain="[]" context="{'group_by': 'current_location_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_hr_mission" model="ir.actions.act_window">
        <field name="name">HR Missions</field>
        <field name="res_model">hr.mission</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_hr_pending': 1}</field>
    </record>
    <!-- Root Menu - This creates the separate app in sidebar -->
    <menuitem id="menu_hr_mission_root" 
              name="HR Missions" 
              web_icon="hr_mission,static/description/icon.png"
              sequence="30"/>
    
    <!-- Submenu under root -->
    <menuitem id="menu_hr_mission_sub" 
              name="Missions" 
              parent="menu_hr_mission_root"
              sequence="10"/>
    
    <!-- Action Menu Item -->
    <menuitem id="menu_hr_mission" 
              name="All Missions" 
              parent="menu_hr_mission_sub" 
              action="action_hr_mission" 
              sequence="10"/>
</odoo>
