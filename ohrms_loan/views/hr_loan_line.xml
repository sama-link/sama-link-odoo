<odoo>
    <record id="view_hr_loan_line_payslip_list" model="ir.ui.view">
        <field name="name">hr.loan.line.payslip.list</field>
        <field name="model">hr.loan.line</field>
        <field name="arch" type="xml">
            <list string="Loan Lines" create="false" delete="false" edit="false">
                <field name="date"/>
                <field name="amount"/>
                <field name="paid"/>
            </list>
        </field>
    </record>

    <record id="view_hr_loan_line_payslip_form" model="ir.ui.view">
        <field name="name">hr.loan.line.payslip.form</field>
        <field name="model">hr.loan.line</field>
        <field name="arch" type="xml">
            <form string="Loan Line" create="false" delete="false">
                <group>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="paid"/>
                </group>
            </form>
        </field>
    </record>

    <record id="hr_loan_line_action_payslip" model="ir.actions.act_window">
        <field name="name">Loan Lines</field>
        <field name="res_model">hr.loan.line</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the loan lines for employee loans.
            </p>
        </field>
        <field name="context">{'create': False, 'delete': False, 'edit': False}</field>
        <field name="view_id" ref="view_hr_loan_line_payslip_list"/>
        <field name="domain">[('loan_id.employee_id', '=', False)]</field>
    </record>
</odoo>