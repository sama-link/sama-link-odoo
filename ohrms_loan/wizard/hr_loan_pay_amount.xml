<odoo>
    <record id="view_hr_loan_pay_amount_wizard_form" model="ir.ui.view">
        <field name="name">hr.loan.pay.amount.wizard.form</field>
        <field name="model">hr.loan.pay.amount.wizard</field>
        <field name="arch" type="xml">
            <form string="Loan Pay Amount">
                <group>
                    <field name="loan_id" invisible="1"/>
                    <field name="balance_amount" readonly="1"/>
                    <field name="amount"/>
                </group>
                <footer>
                    <button name="do_action" type="object" string="Pay" class="btn-primary" confirm="Are you sure you want to pay this amount?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>