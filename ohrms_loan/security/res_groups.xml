<odoo>
    <data noupdate="1">        
        <record model="ir.module.category"
                id="module_category_hr_loans">
            <field name="name">Loans</field>
            <field name="description">Helps you manage HR loans.</field>
            <field name="sequence">17</field>
        </record>
        <!-- Loan Officer Group -->
        <record id="group_loan_officer" model="res.groups">
            <field name="name">Loan Officer</field>
            <field name="category_id" ref="module_category_hr_loans"/>
        </record>
        <!-- Loan First Approval Group -->
        <record id="group_loan_first_approval" model="res.groups">
            <field name="name">Loan First Approval</field>
            <field name="category_id" ref="module_category_hr_loans"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_officer'))]"/>
        </record>
        <!-- Loan Second Approval Group -->
        <record id="group_loan_second_approval" model="res.groups">
            <field name="name">Loan Second Approval</field>
            <field name="category_id" ref="module_category_hr_loans"/>
            <field name="implied_ids" eval="[(4, ref('group_loan_officer'))]"/>
        </record>

        <record id="group_loan_bypass_restrictions" model="res.groups">
            <field name="name">Bypass Loan Restrictions</field>
            <field name="category_id" ref="module_category_hr_loans"/>
        </record>
    </data>
</odoo>