<odoo>
    <!-- List View for zk.employee -->
    <record id="view_zk_employee_list" model="ir.ui.view">
        <field name="name">zk.employee.list</field>
        <field name="model">zk.employee</field>
        <field name="arch" type="xml">
            <list>
                <field name="zk_id"/>
                <field name="emp_code"/>
                <field name="employee_id"/>
                <field name="full_name"/>
                <field name="department_id"/>
                <field name="hire_date"/>
            </list>
        </field>
    </record>

    <!-- Form View for zk.employee -->
    <record id="view_zk_employee_form" model="ir.ui.view">
        <field name="name">zk.employee.form</field>
        <field name="model">zk.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="zk_id"/>
                        <field name="emp_code"/>
                        <field name="employee_id"/>
                        <field name="full_name"/>
                        <field name="department_id"/>
                        <field name="hire_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for zk.employee -->
    <record id="view_zk_employee_search" model="ir.ui.view">
        <field name="name">zk.employee.search</field>
        <field name="model">zk.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="zk_id"/>
                <field name="emp_code"/>
                <field name="employee_id"/>
                <field name="full_name"/>
                <field name="department_id"/>
            </search>
        </field>
    </record>

    <!-- Action for zk.employee -->
    <record id="action_zk_employee" model="ir.actions.act_window">
        <field name="name">ZK Employees</field>
        <field name="res_model">zk.employee</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu for zk.employee -->
    <data noupdate="1">
        <menuitem id="menu_zk_employee" name="Employees" parent="menu_zk_api_root" action="action_zk_employee"/>
    </data>
</odoo>