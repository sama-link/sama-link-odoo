<odoo>
    <record id="view_zk_department_list" model="ir.ui.view">
        <field name="name">zk.department.list</field>
        <field name="model">zk.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="zk_id"/>
                <field name="dept_name"/>
                <field name="dept_code"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_zk_department_form" model="ir.ui.view">
        <field name="name">zk.department.form</field>
        <field name="model">zk.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <field name="zk_id"/>
                        <field name="dept_name"/>
                        <field name="dept_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_zk_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">zk.department</field>
        <field name="view_mode">list,form</field>
    </record>
    <data noupdate="1">
        <menuitem id="menu_zk_department_root" name="Departments" parent="menu_zk_api_root" action="action_zk_department"/>
    </data>
</odoo>