<odoo>
    <data noupdate="1">
        <record id="ir_cron_zk_api_employees" model="ir.cron">
            <field name="name">ZK API Employees Sync</field>
            <field name="model_id" ref="model_zk_api"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_sync_employees()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=30, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="active">True</field>
        </record>
        
        <record id="ir_cron_zk_api_attendance" model="ir.cron">
            <field name="name">ZK API Attendance Sync</field>
            <field name="model_id" ref="model_zk_api"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_sync_attendance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="active">True</field>
        </record>

        <record id="ir_cron_zk_api_link_hr_attendance" model="ir.cron">
            <field name="name">ZK API Link HR Attendance</field>
            <field name="model_id" ref="model_zk_attendance"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_link_hr_attendance()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=2, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="active">True</field>
        </record>

        <record id="ir_cron_zk_api_link_hr_employee" model="ir.cron">
            <field name="name">ZK API Link HR Employee</field>
            <field name="model_id" ref="model_zk_employee"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_link_hr_employee()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=45, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="active">True</field>
        </record>
    </data>
</odoo>