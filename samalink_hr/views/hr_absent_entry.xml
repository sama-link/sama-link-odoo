<odoo>
    <record id="view_hr_absent_entry_form" model="ir.ui.view">
        <field name="name">hr.absent.entry.form</field>
        <field name="model">hr.absent.entry</field>
        <field name="arch" type="xml">
            <form string="Absent Entry">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="date"/>
                        <field name="leave_entry_id"/>
                    </group>
                    <group>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_absent_entry_list" model="ir.ui.view">
        <field name="name">hr.absent.entry.list</field>
        <field name="model">hr.absent.entry</field>
        <field name="arch" type="xml">
            <list string="Absent Entries" create="false" delete="true">
                <field name="employee_id"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_hr_absent_entry_calendar" model="ir.ui.view">
        <field name="name">hr.absent.entry.calendar</field>
        <field name="model">hr.absent.entry</field>
        <field name="arch" type="xml">
            <calendar string="Absent Entries" quick_create="0" date_start="date" color="employee_id" mode="month">
                <field name="employee_id"/>
                <field name="leave_entry_id"/>
                <field name="reason"/>
            </calendar>
        </field>
    </record>

    <record id="action_hr_absent_entry" model="ir.actions.act_window">
        <field name="name">Absent Entries</field>
        <field name="res_model">hr.absent.entry</field>
        <field name="view_mode">calendar,list,form</field>
    </record>
</odoo>