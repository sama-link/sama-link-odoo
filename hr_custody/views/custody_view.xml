<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custody Type Views -->
    <record id="view_hr_custody_type_tree" model="ir.ui.view">
        <field name="name">hr.custody.type.list</field>
        <field name="model">hr.custody.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="view_hr_custody_type_form" model="ir.ui.view">
        <field name="name">hr.custody.type.form</field>
        <field name="model">hr.custody.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_custody_type" model="ir.actions.act_window">
        <field name="name">Custody Types</field>
        <field name="res_model">hr.custody.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Custody Views -->
    <record id="view_hr_custody_form" model="ir.ui.view">
        <field name="name">hr.custody.form</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <form string="Custody" delete="false">
                <header>
                    <button name="action_receive" string="Receive" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_clear" string="Return / Clear" type="object" class="oe_highlight" invisible="state != 'received'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state == 'received'"/>
                            <field name="custody_type_id" readonly="state == 'received'"/>
                            <field name="contract_id" readonly="state == 'received'"/>
                            <field name="custody_document" filename="custody_document_name" readonly="state == 'received'"/>
                            <field name="custody_document_name" invisible="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="date_receive" readonly="state == 'received'"/>
                            <field name="date_return" readonly="state in ('draft', 'received')"/>
                            <field name="value" readonly="state == 'received'"/>
                            <field name="image" widget="image" class="oe_avatar" readonly="state == 'received'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="note" readonly="state == 'received'"/>
                        </page>
                        <page string="Images">
                            <field name="custody_image_ids" readonly="state == 'received'">
                                <list editable="bottom">
                                    <field name="image" widget="image" options='{"size": [90, 90]}'/>
                                    <field name="name"/>
                                </list>
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="image"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('hr.custody.image', 'image', record.id.raw_value)" alt="Image"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong>
                                                        <field name="name"/>
                                                    </strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_custody_tree" model="ir.ui.view">
        <field name="name">hr.custody.list</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <list decoration-warning="state == 'draft'" decoration-info="state == 'received'" decoration-muted="state == 'cleared'" delete="false">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="custody_type_id"/>
                <field name="date_receive"/>
                <field name="date_return"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_hr_custody_search" model="ir.ui.view">
        <field name="name">hr.custody.search</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="custody_type_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="Cleared" name="cleared" domain="[('state', '=', 'cleared')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Type" name="type" context="{'group_by': 'custody_type_id'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_custody" model="ir.actions.act_window">
        <field name="name">Custody</field>
        <field name="res_model">hr.custody</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_received': 1}</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_hr_custody_root" name="Custody" parent="hr.menu_hr_root" sequence="20"/>
    <menuitem id="menu_hr_custody_main" name="Custody" parent="menu_hr_custody_root" action="action_hr_custody" sequence="1"/>
    <menuitem id="menu_hr_custody_type" name="Custody Types" parent="menu_hr_custody_root" action="action_hr_custody_type" sequence="2" groups="hr.group_hr_manager"/>

</odoo>
